  "",
  --Gemini
  "web_search: true",
  'thinking_level: "high"', 
  'web_search: true, thinking_level: "high"',
  --Claude
  "thinking_budget: 12288",
}

--https://creator.poe.com/api-reference/getCurrentBalance
